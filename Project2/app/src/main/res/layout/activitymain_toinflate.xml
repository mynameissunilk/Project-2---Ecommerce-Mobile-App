<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="13dp"
    android:elevation="15dp">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/wolf" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Gray Wolf"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview"/>

    <TextView
        android:id="@+id/textview_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:padding="4dp"
        android:text="Something about wolves goes here..."
        android:layout_below="@id/textview_title"
        />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="$5,000.00"
        android:layout_alignRight="@id/textview_title"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageview"
        />

    <TextView
        android:id="@+id/textview_stock"
        android:text="7 IN STOCK"
        android:textStyle="italic"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_price"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>